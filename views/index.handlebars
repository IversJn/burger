<div class="bigboy">

  <div class="row">
    <div class="col-sm-6">

      <br>
      <h2>Burgers Available To Eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          {{this.id}}
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="btn-primary" type="submit">Eat!</button>
          </form>

        </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-sm-6">

      <h2>Burgers In Your Belly!</h2>

      {{#each burgers}}
      {{#if this.devoured}}
      <li>
        {{this.id}}
        {{this.burger_name}}

      </li>
      {{/if}}
      {{/each}}

    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <h2>Add Burger, Choose Wisely</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ba">Burger:</label>
          <input type="text" id="name" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>