<div class="bigboy">

  <div class="row">
    <div class="col-sm-6">

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block burger=true}}
    {{/unless}}
  {{/each}}
</ul>

    </div>

    <div class="col-sm-6">


<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

    </div>
  </div>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>